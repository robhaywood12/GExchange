<% include ./partials/header %>
<% var numResults = 0; %>

<h1>Game Results Page</h1>


<% users.forEach(function(results){ %>
    <% if ((speaking === results.nativeLang) && (learning === results.practLang)) { %>
        <% numResults = numResults + 1; %>
    <% } %>
<% }); %>

<% var s = "" %>
<% if (numResults > 1) { %>
    <% s = "s"; } %>
<div class="text-center text-white">
    <h3><%= numResults %> result<%=s%> found.</h3>
</div>


<% users.forEach(function(results){ %>
    
    <div class="card text-white text-center mx-auto mb-3" style="width: 35rem">
        <% if ((speaking === results.nativeLang) && (learning === results.practLang)) { %>
            
            <p><a href="/users/<%= results.id %>"><%= results.username %></a></p>
            <p>Country: <%= results.country %></p>
            <p>Speaking: <%= results.nativeLang %></p>
            <p>Learning: <%= results.practLang %></p> 
            <p>Summary: <%= results.desc.substring(0, 100)%>...</p>
            
        <% } %>
    </div>
    
    <% }); %>  </li>



<% include ./partials/footer %>
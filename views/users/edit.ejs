<% include ../partials/header %>
<h1>Edit Profile</h1>


<!-- this sends a post request to /register -->
<form action="/users/<%=user._id%>?_method=PUT" method="POST">
    <div>
        <h4><%=user.username%></h4>
    </div>
    <div>
        <input type="text" name="edits[country]" value="<%= user.country %>">
    </div>
    <div>
        <input type="text" name="edits[nativeLang]" value="<%= user.nativeLang %>">
    </div>
    <div>
        <input type="text" name="edits[practLang]" value="<%= user.practLang %>">
    </div>
    <div>
        <input type="text" name="edits[gamesPlaying]" value="<%=user.gamesPlaying%>">
    </div>
    <div>
        <input type="text" name="edits[desc]" value="<%= user.desc %>">
    </div>
    <div>
        <button>Submit</button>
    </div>
    
</form>

<% include ../partials/footer %>